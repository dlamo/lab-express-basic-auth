<div id="form">
  <h2>Login</h2>
  <form action="/login" method="POST">
    <label for="input-email">Email</label>
    <input type="email" id="input-email" name="email" placeholder="Your email" />

    <label for="input-password">Password</label>
    <input type="password" name="password" id="input-password" placeholder="********" />

    <button type="submit">Login</button>
    
    <a href="/" style="color:red;">Cancel</a>

    {{#if errorMessage}}
      <p class="error" style="color: red; text-transform: uppercase">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>

